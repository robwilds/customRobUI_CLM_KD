{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../../../dist/out-tsc",
        "declaration": true,
        "declarationMap": true,
        "inlineSources": true,
        "noImplicitAny": false,
        "strictPropertyInitialization": false,
        "types": [],
        "paths": {
            "@alfresco-dbp/shared-core": ["dist/libs/shared-core"]
        }
    },
    "exclude": [
        "src/test.ts",
        "**/*.spec.ts",
        "**/*.test.ts",
        "jest.config.ts"
    ],
    "include": ["**/*.ts"]
}
